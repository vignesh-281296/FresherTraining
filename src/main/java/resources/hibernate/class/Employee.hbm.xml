<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ideas2it.employeemanagement.employee.model.Employee" table="employee">
        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="desgination" column="desgination" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="phoneNumber" column="phone_number" type="long"/>
        <property name="salary" column="salary" type="float"/>
        <property name="dob" column="dob" type="date"/>
        <property name="isDelete" column="is_delete" type="boolean"/>

        <bag name="addressess" cascade="save-update">
            <key column="employee_id" />
            <one-to-many class="com.ideas2it.employeemanagement.employee.model.Address" />
        </bag>

        <bag name="projects" table="employee_project" cascade="save-update">
            <key column="employee_id" />
            <many-to-many class="com.ideas2it.employeemanagement.project.model.Project" column="project_id" />
        </bag>
    </class>
</hibernate-mapping>